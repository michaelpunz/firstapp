{
  "name": "express-typescript-starter",
  "version": "0.1.0",
  "description": "A starting point for Node.js express apps with TypeScript",
  "repository": {
    "type": "git",
    "url": "https://github.com/Microsoft/TypeScript-Node-Starter"
  },
  "author": "Bowden Kelly",
  "license": "MIT",
  "scripts": {
    "start": "node dist/server.js",
    "build": "npm run build-ts && npm run tslint && npm run build-client && npm run copy-static-assets",
    "build-client": "cd client && npm run build && cd ..",
    "build-ts": "tsc",
    "clean-db": "ts-node data.ts --delete",
    "create-db": "ts-node data.ts",
    "copy-static-assets": "ts-node copyStaticAssets.ts",
    "cypress-open": "concurrently \"cross-env NODE_ENV=test MONGOLAB_URI=mongodb://localhost:27017/testing node dist/server.js\" \"cypress open\"",
    "prepare": "cd client && npm install && cd ..",
    "postinstall": "rimraf -rf node_modules/@types/mocha",
    "heroku-postbuild": "npm run build",
    "prettier": "prettier --single-quote --print-width 100 --write \"src/**/*.ts?(x)\"",
    "metrics": "plato -r -d report dist",
    "test": "cross-env NODE_ENV=test MONGOLAB_URI=mongodb://localhost:27017/testing jest --maxWorkers 1 --forceExit",
    "test-ci": "npm run test && cd client && CI=true npm run test-ci",
    "test-coverage": "npm run test -- --coverage",
    "test-cypress": "cross-env NODE_ENV=test MONGOLAB_URI=mongodb://localhost:27017/testing node dist/server.js & wait-on http://localhost:3001 && cypress run",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "watch-node": "nodemon dist/server.js",
    "watch-ts": "tsc -w"
  },
  "dependencies": {
    "aws-sdk": "^2.227.1",
    "body-parser": "^1.18.2",
    "connect-mongo": "^2.0.0",
    "date-fns": "^1.29.0",
    "dotenv": "^4.0.0",
    "express": "^4.16.2",
    "express-session": "^1.15.6",
    "express-validator": "^4.3.0",
    "fbgraph": "^1.4.1",
    "istanbul-api": "^1.2.2",
    "istanbul-reports": "^1.1.4",
    "lodash": "^4.17.4",
    "mongoose": "^4.13.11",
    "morgan": "^1.9.1",
    "multer": "^1.3.0",
    "multer-s3": "^2.7.0",
    "nodemailer": "^4.4.1",
    "passport": "^0.4.0",
    "passport-facebook": "^2.1.1",
    "passport-google-oauth": "^1.0.0",
    "passport-local": "^1.0.0",
    "qrcode": "^1.2.0",
    "socket.io": "^2.0.4",
    "source-map-support": "^0.5.3",
    "uuid": "^3.2.1",
    "winston": "^3.0.0-rc5"
  },
  "devDependencies": {
    "@types/body-parser": "^1.16.8",
    "@types/connect-mongo": "^0.0.35",
    "@types/dotenv": "^4.0.2",
    "@types/express": "^4.11.1",
    "@types/express-session": "^1.15.8",
    "@types/faker": "^4.1.2",
    "@types/jest": "^22.1.3",
    "@types/lodash": "^4.14.91",
    "@types/mongodb": "^3.0.5",
    "@types/mongoose": "^4.7.34",
    "@types/morgan": "^1.7.35",
    "@types/multer": "^1.3.6",
    "@types/node": "^9.4.6",
    "@types/nodemailer": "^4.3.4",
    "@types/passport": "^0.4.3",
    "@types/passport-facebook": "^2.1.7",
    "@types/passport-google-oauth": "^1.0.37",
    "@types/passport-local": "^1.0.32",
    "@types/shelljs": "^0.7.8",
    "@types/socket.io": "^1.4.33",
    "@types/supertest": "^2.0.4",
    "concurrently": "^3.5.1",
    "cross-env": "^5.1.4",
    "cypress": "^2.1.0",
    "faker": "^4.1.0",
    "jest": "^22.4.3",
    "nodemon": "^1.13.0",
    "plato": "^1.7.0",
    "prettier": "^1.10.2",
    "shelljs": "^0.7.7",
    "supertest": "^3.0.0",
    "ts-jest": "^22.0.4",
    "ts-node": "^5.0.0",
    "tslint": "^5.9.1",
    "typescript": "^2.8.3",
    "wait-on": "^2.1.0"
  },
  "cacheDirectories": [
    "client/node_modules",
    "node_modules"
  ]
}
